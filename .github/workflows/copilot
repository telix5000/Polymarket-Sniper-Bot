- name: Auto-Approve Workflow Runs
  if: github.actor == 'github-copilot[bot]'
  run: |
    curl -X POST \
    -H "Authorization: token ${{ secrets.GITHUB_TOKEN }}" \
    -H "Accept: application/vnd.github.v3+json" \
    https://api.github.com/repos/${{ github.repository }}/actions/runs/${{ github.run_id }}/approve
