{
  "name": "polymarket-sniper-bot",
  "version": "1.0.0",
  "private": false,
  "description": "Automated trading bot for Polymarket with mempool monitoring and priority execution. Monitors Polygon mempool and Polymarket API for pending trades, then executes orders with higher priority gas pricing.",
  "license": "Apache-2.0",
  "author": {
    "name": "telix5000",
    "url": "https://github.com/telix5000"
  },
  "type": "commonjs",
  "main": "dist/app/main.js",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "src",
    "docs",
    "README.md",
    "CONTRIBUTING.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:rust": "cd rust-clob-bridge && cargo build --release",
    "build:all": "npm run build:rust && npm run build",
    "start": "node dist/app/main.js",
    "dev": "ts-node src/app/main.ts",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "postinstall": "patch-package",
    "arbitrage": "node src/arbitrage/run.js",
    "check-allowance": "ts-node src/cli/check-allowance.command.ts",
    "verify-allowance": "ts-node src/cli/verify-allowance.command.ts",
    "set-token-allowance": "ts-node src/cli/set-token-allowance.command.ts",
    "manual-sell": "ts-node src/cli/manual-sell.command.ts",
    "simulate": "ts-node src/cli/run-simulations.command.ts",
    "test": "node --test -r ts-node/register/transpile-only tests/**/*.test.ts",
    "preflight": "node dist/tools/preflight.js",
    "test-auth": "node test-auth-harness.js",
    "auth:probe": "ts-node scripts/auth-probe.ts",
    "auth:diag": "ts-node scripts/auth_diagnostic.ts",
    "check:secrets": "bash scripts/lint-check-secrets.sh",
    "lint:secrets": "bash scripts/lint-check-secrets.sh && npm run lint",
    "auth:diag:debug": "LOG_LEVEL=debug ts-node scripts/auth_diagnostic.ts",
    "clob:probe": "ts-node scripts/clob_auth_probe.ts",
    "clob:matrix": "DEBUG_PREFLIGHT_MATRIX=true ts-node scripts/clob_auth_probe.ts",
    "auth:probe:minimal": "ts-node scripts/minimal_auth_probe.ts",
    "auth:probe:simple": "ts-node scripts/auth_probe.ts",
    "auth:validate": "ts-node scripts/validate_minimal_auth.ts",
    "auth:validate-logging": "ts-node scripts/validate_auth_logging.ts",
    "wallet:check": "ts-node scripts/check_wallet_status.ts",
    "wallet:detect": "ts-node scripts/detect_wallet_type.ts"
  },
  "keywords": [
    "polymarket",
    "sniper",
    "frontrunning",
    "trading bot",
    "sniper bot",
    "polymarket bot",
    "mempool",
    "mev",
    "prediction markets",
    "polygon",
    "usdc"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/telix5000/Polymarket-Sniper-Bot.git"
  },
  "bugs": {
    "url": "https://github.com/telix5000/Polymarket-Sniper-Bot/issues"
  },
  "homepage": "https://github.com/telix5000/Polymarket-Sniper-Bot#readme",
  "dependencies": {
    "@polymarket/builder-relayer-client": "^0.0.8",
    "@polymarket/builder-signing-sdk": "^0.0.8",
    "@polymarket/clob-client": "^5.2.1",
    "axios": "^1.13.2",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3",
    "ethers": "^6.16.0",
    "mongoose": "^9.1.4",
    "ora": "^9.0.0",
    "viem": "^2.44.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.0.0",
    "patch-package": "^8.0.1",
    "prettier": "^3.8.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
