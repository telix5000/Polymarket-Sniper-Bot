# === REQUIRED ===
PRIVATE_KEY=your_private_key_here

# === OPTIONAL ===
# RPC_URL=https://polygon-rpc.com
# MAX_TRADE_USD=25
# LIVE_TRADING=I_UNDERSTAND_THE_RISKS

# Telegram notifications
# TELEGRAM_BOT_TOKEN=your_bot_token
# TELEGRAM_CHAT_ID=your_chat_id

