# Force liquidation of existing positions
# FORCE_LIQUIDATION=true

# POL gas reserve settings
# POL_RESERVE_TARGET=50
# POL_RESERVE_MIN=0.5
# POL_RESERVE_MAX_SWAP_USD=10
